#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_bitcoin
#build/bitcoind::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_bitcoin)

DEB_INSTALL_EXAMPLES_xgamecoind += debian/examples/*
DEB_INSTALL_MANPAGES_xgamecoind += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix xgamecoind
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f xgamecoin-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake xgamecoin-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_xgamecoin
	src/test_xgamecoin

# Ensure wrapper is set executable
binary-post-install/xgamecoind:
	chmod +x $(cdbs_curdestdir)usr/bin/xgamecoind
binary-post-install/xgamecoin-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/xgamecoin-qt
